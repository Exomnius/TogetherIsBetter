<Window x:Class="TogetherIsBetter.overview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="overview" Height="840" Width="840">
    <Grid>
        <Grid.RowDefinitions>
            <!--Header-->
            <RowDefinition Height="auto"/>
            <!--calendar-->
            <RowDefinition Height="auto"/>
            <!--Extra Buttons-->
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!--Header-->
        <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Stretch" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Name="btnManagement" Content="Management" Margin="5" VerticalAlignment="center" Click="btnManagement_Click"/>
            <Button Name="btnProfile" Content="Profile" Margin="5" VerticalAlignment="center" Click="btnProfile_Click"/>
            <Button Name="btnLogout" Content="Logout" Margin="5" VerticalAlignment="center" Click="btnLogout_Click"/>
        </StackPanel>
    </Grid>
</Window>
